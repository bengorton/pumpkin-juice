@import "jeet"
@import "nib"
@import "rupture"

/**
 * nib reset
 */
global-reset();

// http://www.paulirish.com/2012/box-sizing-border-box-ftw/
html
  box-sizing border-box
*, *:before, *:after 
  box-sizing inherit

/**
 * theme variables
 */

/*
 * light on dark
 */
/*
