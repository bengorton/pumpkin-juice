/**
 * base should be the first import after any resets to
 * establish variables
 */

/**
 * importing google fonts - way more than needed
 */
@import url('http://fonts.googleapis.com/css?family=Arvo:400,700')
@import url('http://fonts.googleapis.com/css?family=Open+Sans:300italic,400,300,700')
@import url('http://fonts.googleapis.com/css?family=Vollkorn')

// http://www.paulirish.com/2012/box-sizing-border-box-ftw/
html
  box-sizing border-box
*, *:before, *:after 
  box-sizing inherit

/**
 * theme variables
 */
back     = #120D08
backmid  = #421614
mid      = #BF4E15
midfore  = #DB713B
fore     = #FAF2F8

/**
 * breakpoints
 * use +below(var) or +above(var) to set a media query via rupture
 *
 * these variable are all set to breakpoint + 1px
 */
mobile            = 641px
tablet-portrait   = 769px
tablet            = 1025px
laptop            = 1141px
desktop           = 1441px
