*/
/**
 * dark on light
 */
back     = #F2f2f2
backmid  = #DB713B
mid      = #BF4E15
midfore  = #421614
fore     = #120D08
/**
 * breakpoints
 * use +below(var) or +above(var) to set a media query via rupture
 *
 * these variable are all set to breakpoint + 1px
 */
mobile            = 641px
tablet-portrait   = 769px
tablet            = 1025px
laptop            = 1141px
desktop           = 1441px
