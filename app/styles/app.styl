@import "_base"
@import "_type"

body
  background-color back
  padding 5px

header
  width 100%
  min-height 100px
  border 3px solid backmid
  color mid

  h1
    transform translateY(50%)
    text-align center
    center(300px)

h1
  color midfore

ul.count
  width 100%
  cf()
  li
    height 100px
    min-width 200px
    background-color mid
    border 3px solid midfore
    border-radius 30px 30px
    col(1/3, gutter: .1)
    text-align center
    padding-top 30px
    &:nth-child(even)
      background-color backmid


